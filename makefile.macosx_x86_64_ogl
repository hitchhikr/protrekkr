CC = gcc
CXX = g++

LIBS_X86_64 = -lsdldraw_x86_64 -lz -framework CoreAudio -framework CoreMidi -framework AudioUnit -framework Cocoa -framework OpenGL -lSDL

DEBUG = 

FLAGS_X86_64 = $(DEBUG) -Ofast -fsigned-char -arch x86_64 -ffast-math -fomit-frame-pointer -fno-rtti -I/opt/local/include \
            -fno-strict-aliasing -w -D __MACOSX_X86__ -D __GCC__ -D __MACOSX_CORE__ -D __MOT_SWAP__ -D __AIFF__ -D __USE_OPENGL__

EXEOBJS_X86_64 = ptk_x86_64.o \
              editor_303_x86_64.o editor_pattern_x86_64.o editor_sequencer_x86_64.o editor_track_x86_64.o editor_track_fx_x86_64.o \
              patterns_blocks_x86_64.o editor_synth_x86_64.o editor_sample_x86_64.o editor_fx_setup_x86_64.o editor_setup_x86_64.o \
              editor_diskio_x86_64.o editor_reverb_x86_64.o editor_instrument_x86_64.o editor_midi_x86_64.o \
              samples_pack_x86_64.o files_list_x86_64.o files_x86_64.o mods_x86_64.o s3m_x86_64.o patterns_x86_64.o reverbs_x86_64.o midi_cfg_x86_64.o \
              bits_x86_64.o pack_x86_64.o tinypack_x86_64.o words_x86_64.o wputils_x86_64.o \
              config_x86_64.o 303s_x86_64.o synths_x86_64.o insts_x86_64.o ptps_x86_64.o \
              midi_x86_64.o rtmidi_x86_64.o midi_dispatch_x86_64.o \
              timer_x86_64.o main_x86_64.o sdlmain_x86_64.o \
              misc_draw_x86_64.o draw_primitives_x86_64.o requesters_x86_64.o \
              samples_ops_x86_64.o aiff_x86_64.o aiff_interface_x86_64.o riff_x86_64.o riff_interface_x86_64.o \
              tb_303_x86_64.o wavpack_x86_64.o samples_unpack_x86_64.o replay_x86_64.o synth_x86_64.o endianness_x86_64.o \
              sounddriver_macosx_x86_64.o

all: protrekkr_x86_64

clean: RemObj

RemObj:
	-rm -f $(EXEOBJS_X86_64)

protrekkr_x86_64: $(EXEOBJS_X86_64)
	-rm -f ./release/ptk/protrekkr_x86_64.app/Contents/MacOS/Protrekkr
	(cd src/extralibs/sdl_draw; make -f makefile.macosx_x86_64)
	(cd src/extralibs/zlib-1.2.3; make -f makefile.macosx_x86_64)
	(cd src/extralibs/bin2c; make -f makefile.macosx_x86_64)
	$(CXX) -o ./release/ptk/protrekkr_x86_64.app/Contents/MacOS/Protrekkr \
           -L./ -L/opt/local/lib -L/library/frameworks -Lsrc/extralibs/sdl_draw -Lsrc/extralibs/zlib-1.2.3 $(FLAGS_X86_64) $(EXEOBJS_X86_64) $(LIBS_X86_64)
	strip -x -X -S ./release/ptk/protrekkr_x86_64.app/Contents/MacOS/Protrekkr
	chmod +x ./release/ptk/protrekkr_x86_64.app/Contents/MacOS/Protrekkr
	install_name_tool ./release/ptk/protrekkr_x86_64.app/Contents/MacOS/Protrekkr -change /opt/local/lib/libSDL-1.2.0.dylib @executable_path/libSDL-1.2.0.dylib

