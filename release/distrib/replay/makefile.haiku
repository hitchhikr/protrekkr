CC = g++
AS = as
AR = ar
STRIP = strip
LIBS = -lptkreplay -lgame
FLAGS = -Os -fsigned-char -fno-strict-aliasing -ffast-math -D __HAIKU__ -D __GCC__ -D __STAND_ALONE__
EXEOBJS = test.o module.o

all: remreplaytest ptkreplay replaytest
clean: remobj

remreplaytest:
	-rm -f libptkreplay.a
	-rm -f replaytest

remobj:
	-rm -f $(EXEOBJS)

replaytest: $(EXEOBJS)
	$(CC) -o $(@) -L./ $(FLAGS) $(EXEOBJS) $(LIBS)
	$(STRIP) -s -x $(@)

test.o: test/test_linux.cpp
	$(CC) -c -o $(@) $(FLAGS) test/test_linux.cpp

module.o: test/module.s
	$(AS) -o $(@) test/module.s

# the library itself #
include lib/makefile.haiku
